{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "estoque-route": {
        "ClusterId": "estoque-cluster",
        "Match": { "Path": "/api/estoque/{**catchall}" },
        "Transforms": [
          { "PathPattern": "/api/{**catchall}" }
        ]
      },
      "faturamento-route": {
        "ClusterId": "faturamento-cluster",
        "Match": { "Path": "/api/faturamento/{**catchall}" },
        "Transforms": [
          { "PathPattern": "/api/{**catchall}" }
        ]
      }
    },
    "Clusters": {
      "estoque-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "faturamento-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}